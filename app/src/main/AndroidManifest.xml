<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apk.market">

    <application
        android:name="com.example.apk.market.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.apk.market.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.apk.market.detail.DetailActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.example.apk.market.kind.more.KindDetailActivity"
            android:launchMode="singleTop" />
        <activity android:name="com.example.apk.market.manage.LocalAppActivity" />

        <activity android:name="com.example.apk.market.download.DownLoadAcitivity" />

        <activity
            android:name="com.example.apk.market.search.SearchAcitivity" />
        <activity
            android:name="com.example.apk.market.setting.SettingActivity" />
        <activity
            android:name="com.example.apk.market.detail.SameAppActivity" />
    </application>


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>